
install: package.json
	@npm install --production

dev: package.json
	@npm install

test: dev
	@NODE_ENV=test ./node_modules/.bin/mocha -r should -R spec test/test

test-watch: dev
	@NODE_ENV=test ./node_modules/.bin/mocha -w -r should -R spec test/test

test-env: dev
	@NODE_ENV=test CLOUDXLS_API_KEY=SOME-API-KEY ./node_modules/.bin/mocha -r should -R spec test/test-env

clean:
	rm -rf node_modules

.PHONY: test test-watch clean
